<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pidev.controllers.OrderDetailsController"
      stylesheets="@styles/Orders/Orders.css" prefWidth="400">

    <Label fx:id="orderIdLabel" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    <Label fx:id="clientNameLabel" style="-fx-font-size: 16;"/>
    <Label fx:id="dateLabel" style="-fx-font-size: 16;"/>
    <Label fx:id="paymentLabel" style="-fx-font-size: 16;"/>

    <Separator/>

    <Label text="Articles:" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    <VBox fx:id="articlesContainer" spacing="5" style="-fx-padding: 0 0 0 20;"/>

    <Separator/>

    <Label fx:id="totalLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
        <Button text="Close" onAction="#handleClose" style="-fx-background-color: #ca8a62; -fx-text-fill: white;"/>
    </HBox>
</VBox>