<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.*?>
<?import java.net.URL?>



<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>

<VBox fx:id="chatContainer"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.pidev.controllers.ChatbotController"
      style="-fx-background-color: #f8f9fa; -fx-border-color: #e9ecef; -fx-border-width: 1px;"
      prefWidth="400"
      prefHeight="600"
      spacing="0">

    <!-- En-tête raffiné -->
    <HBox style="-fx-background-color: #b5602c; -fx-padding: 20px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 3);">
        <Label text="RecycloTech Assistant"
               style="-fx-text-fill: white;
                      -fx-font-size: 20px;
                      -fx-font-weight: 800;
                      -fx-font-family: 'Segoe UI';
                      -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 2, 0, 0, 1);"/>
    </HBox>

    <!-- Zone de messages améliorée -->
    <ScrollPane fx:id="scrollPane"
                style="-fx-background: transparent; -fx-border-color: transparent;"
                fitToWidth="true"
                VBox.vgrow="ALWAYS">
        <VBox fx:id="messageContainer"
              spacing="15"
              style="-fx-padding: 20px;"/>
    </ScrollPane>

    <!-- Zone de saisie premium -->
    <HBox spacing="12"
          style="-fx-padding: 20px; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 6, 0, 0, -3);"
          VBox.vgrow="NEVER">
        <TextField fx:id="userInput"
                   promptText="Écrivez votre message..."
                   HBox.hgrow="ALWAYS"
                   style="-fx-background-radius: 25;
                          -fx-border-radius: 25;
                          -fx-border-color: #e9ecef;
                          -fx-border-width: 1.5px;
                          -fx-padding: 12px 20px;
                          -fx-font-size: 14px;
                          -fx-focus-color: #b5602c;"/>

        <Button text="➤"
                onAction="#handleSend"
                style="-fx-background-color: #b5602c;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;
                       -fx-background-radius: 20px;
                       -fx-min-width: 45px;
                       -fx-min-height: 45px;
                       -fx-effect: dropshadow(gaussian, rgba(181,96,44,0.3), 8, 0, 0, 2);"/>
    </HBox>

    <stylesheets>
        <URL value="@styles/MaterielRecyclable/chatbot-style.css"/>
    </stylesheets>
</VBox>