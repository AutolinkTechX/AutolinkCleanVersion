<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.pidev.controllers.EditBlogController" prefWidth="400" prefHeight="400">
    <children>
        <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
            <padding>
                <Insets top="20" left="20" right="20" bottom="20"/>
            </padding>
            <children>
                <Label text="Modifier Blog" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                <TextField fx:id="titleField" promptText="Titre"/>
                <TextArea fx:id="contentField" promptText="Contenu" prefRowCount="4"/>
                <DatePicker fx:id="datePicker"/>
                <TextField fx:id="imageField" promptText="Image URL ou path"/>
                <TextField fx:id="likesField" promptText="Likes"/>
                <TextField fx:id="dislikesField" promptText="Dislikes"/>

                <Button text="Enregistrer" onAction="#handleSave"/>
            </children>
        </VBox>
    </children>
</AnchorPane>
