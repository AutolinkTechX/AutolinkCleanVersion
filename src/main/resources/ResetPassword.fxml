<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="org.example.pidev.controllers.ResetPasswordController">
    
    <!-- Top Header Section -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #2a5885;">
            <Label text="Reset Password" 
                   style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"
                   HBox.hgrow="ALWAYS" 
                   alignment="CENTER" 
                   />
        </HBox>
    </top>

    <!-- Main Form Content -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 30;">
            <GridPane hgap="10" vgap="15" alignment="CENTER">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>

                <!-- New Password Field -->
                <Label text="New Password:" 
                       GridPane.rowIndex="0" 
                       GridPane.columnIndex="0" />
                <PasswordField fx:id="newPasswordField" 
                             GridPane.rowIndex="0" 
                             GridPane.columnIndex="1"
                             promptText="Enter new password"
                             minWidth="250"/>

                <!-- Confirm Password Field -->
                <Label text="Confirm Password:" 
                       GridPane.rowIndex="1" 
                       GridPane.columnIndex="0" />
                <PasswordField fx:id="confirmPasswordField" 
                             GridPane.rowIndex="1" 
                             GridPane.columnIndex="1"
                             promptText="Confirm new password"
                             minWidth="250"/>

                <!-- Message Label -->
                <Label fx:id="messageLabel" 
                       style="-fx-text-fill: red;" 
                       GridPane.rowIndex="2"
                       GridPane.columnIndex="0" 
                       GridPane.columnSpan="2"
                       wrapText="true"
                       maxWidth="350"/>
            </GridPane>

            <!-- Action Buttons -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Cancel" 
                       fx:id="cancelButton" 
                       cancelButton="true"
                       style="-fx-background-color: #cccccc; -fx-text-fill: #333;"
                       minWidth="120"
                       onAction="#handleCancelAction"/>
                <Button text="Reset Password" 
                       fx:id="resetButton" 
                       defaultButton="true"
                       style="-fx-background-color: #2a5885; -fx-text-fill: white;"
                       minWidth="120"
                       onAction="#handleResetAction"/>
            </HBox>
        </VBox>
    </center>

    <!-- Footer Section -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #f5f5f5; -fx-padding: 10;">
            <Label text="Password must be at least 8 characters long and contain at least one number and special character" 
                   style="-fx-text-fill: #666; -fx-font-size: 12;"/>
        </HBox>
    </bottom>
</BorderPane>